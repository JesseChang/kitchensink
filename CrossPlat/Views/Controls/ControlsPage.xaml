<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CrossPlat.Views.Controls.ControlsPage">
	<ContentPage.Content>
        <StackLayout Margin="0,30">
            <Label Text="Controls" HorizontalTextAlignment="Center" FontSize="Large" FontAttributes="Bold" TextColor="Black" />
            <Button Margin="5,10,5,5" Text="Label and Entry" BackgroundColor="Silver" TextColor="Black" Clicked="LabelEntry_Clicked" />
            <Button Margin="5,10,5,5" Text="Images" BackgroundColor="Silver" TextColor="Black" Clicked="ImagePage_Clicked" />
            <Button Margin="5,10,5,5" Text="Editor" BackgroundColor="Silver" TextColor="Black" Clicked="EditorPage_Clicked" />
            <Button Margin="5,10,5,5" Text="Date and Time" BackgroundColor="Silver" TextColor="Black" Clicked="DateTimePage_Clicked" />
            <Button Margin="5,10,5,5" Text="Slider" BackgroundColor="Silver" TextColor="Black" Clicked="SliderPage_Clicked" />
            <Button Margin="5,10,5,5" Text="Stepper" BackgroundColor="Silver" TextColor="Black" Clicked="StepperPage_Clicked" />
            <Button Margin="5,10,5,5" Text="Switch" BackgroundColor="Silver" TextColor="Black" Clicked="SwitchPage_Clicked" />
        </StackLayout>        
	</ContentPage.Content>
</ContentPage>
